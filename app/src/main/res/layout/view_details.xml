<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView style="@style/BuxCardView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin">

            <TextView style="@style/BuxTextView.Big.Accent"
                android:id="@+id/details_product_name_text_view"
                android:textAllCaps="true"
                tools:text="Adidas"/>

            <TextView style="@style/BuxTextView"
                android:id="@+id/details_product_description_text_view"
                android:layout_marginTop="@dimen/margin"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView style="@style/BuxCardView">

        <TextView style="@style/BuxTextView.Huge"
            android:id="@+id/details_product_price_text_view"
            android:text="123.3245 EUR"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_big"/>

    </android.support.v7.widget.CardView>

</LinearLayout>