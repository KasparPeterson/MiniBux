<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="@dimen/margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView style="@style/BuxCardView"
            android:id="@+id/details_error_container">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin">

                <TextView style="@style/BuxTextView.Error"
                          android:text="@string/details_no_connection"
                          android:gravity="center"
                          android:layout_marginTop="@dimen/margin"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/details_retry_button"
                    android:text="@string/details_retry"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/BuxCardView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin">

                <TextView style="@style/BuxTextView.Big.Accent"
                          android:id="@+id/details_product_name_text_view"
                          android:textAllCaps="true"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          tools:text="Adidas"/>

                <TextView style="@style/BuxTextView"
                          android:id="@+id/details_product_description_text_view"
                          android:layout_marginTop="@dimen/margin"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/BuxCardView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView style="@style/BuxTextView.Normal"
                              android:text="@string/details_price"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>

                    <TextView style="@style/BuxTextView.Huge"
                              android:id="@+id/details_product_price_text_view"
                              tools:text="0.00"
                              android:layout_marginLeft="@dimen/text_view_side_margin"
                              android:layout_marginRight="@dimen/text_view_side_margin"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView style="@style/BuxTextView.Error"
                          android:id="@+id/details_product_price_error_text_view"
                          android:text="@string/details_no_connection"
                          android:layout_marginTop="@dimen/margin"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:drawableEnd="@drawable/ic_error_black_24dp"/>

                <Button
                    android:id="@+id/details_price_retry_button"
                    android:text="@string/details_retry"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>