<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/BuxCardView.Choose"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:padding="@dimen/margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView style="@style/BuxTextView.Big"
            android:id="@+id/list_item_product_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Product"/>

        <TextView style="@style/BuxTextView.Normal.White"
            android:id="@+id/list_item_product_price_text_view"
            android:text="@string/choose_product_price"
            android:layout_below="@id/list_item_product_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView style="@style/BuxTextView.Normal.White"
            android:id="@+id/list_item_product_price_value_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_side_margin"
            android:layout_marginRight="@dimen/text_view_side_margin"
            android:layout_below="@id/list_item_product_text_view"
            android:layout_toEndOf="@id/list_item_product_price_text_view"
            tools:text="â‚¬ 15.00"/>

        <TextView style="@style/BuxTextView.Normal.White"
            android:id="@+id/list_item_product_category_text_view"
            android:text="@string/choose_product_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_product_price_text_view"/>

        <TextView style="@style/BuxTextView.Normal.White"
            android:id="@+id/list_item_product_category_value_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_side_margin"
            android:layout_marginRight="@dimen/text_view_side_margin"
            android:layout_below="@id/list_item_product_price_text_view"
            android:layout_toEndOf="@id/list_item_product_category_text_view"
            tools:text="Stocks"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>